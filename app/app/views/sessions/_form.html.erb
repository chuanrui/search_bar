<%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |form| %>
    <div style="text-align: center;  position: relative; color: #aaa; margin-top: 10px; margin-bottom: 10px; padding-top: 10px; padding-bottom: 10px;">
      <div class="label" style="color: #5e8396; font-size: 21px; line-height: 32px; font-weight: 400;">
        <%= form.label :username %>
      </div>
      <div class="field" style="box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); cursor: text; padding: 8px 10px; transition: border .1s linear;">
        <%= form.text_field :username%>
      </div>
    
      <div class="label" style="color: #5e8396; font-size: 21px; line-height: 32px; font-weight: 400;">
        <%= form.label :password %>
      </div>
    
      <div class="field" style="box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); cursor: text; padding: 8px 10px; transition: border .1s linear;">
        <%= form.password_field :password %>
      </div>
    
      <div class="actions" style="text-align: center; width: 100%; font-weight: 600; background: #54C7C3; color: #fff; padding: 8px 25px;">
        <%= form.submit "Log in", class:'btn-lg'%>
      </div>
    </div>
    <% end %>