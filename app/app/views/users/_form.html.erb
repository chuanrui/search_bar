<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="text-align: center;  position: relative; color: #aaa; margin-top: 10px; margin-bottom: 10px; padding-top: 10px; padding-bottom: 10px;">
  <div class="label" style="color: #5e8396; font-size: 21px; line-height: 32px; font-weight: 400;">
    <%= form.label :username, style:"width: 200px; text-align: right; display: inline-block" %>
    <%= form.text_field :username, html: { size:"16", minlength:3, maxlength:25, placeholder:"Please enter user name", style:"box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); cursor: text; padding: 8px 10px; transition: border .1s linear;" }%>
  </div>

  <div class="label" style="color: #5e8396; font-size: 21px; line-height: 32px; font-weight: 400;">
    <%= form.label :fullname, style:"width: 200px; text-align: right; display: inline-block" %>
    <%= form.text_field :fullname, html: { size:"16", maxlength:30, placeholder:"Please enter email", style:"box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); cursor: text; padding: 8px 10px; transition: border .1s linear;" }%>
  </div>

  <div class="label" style="color: #5e8396; font-size: 21px; line-height: 32px; font-weight: 400;">
    <%= form.label :password, style:"width: 200px; text-align: right; display: inline-block" %>
    <%= form.text_field :password, html: { size:"16", maxlength:25, placeholder:"Please enter password", style:"box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); cursor: text; padding: 8px 10px; transition: border .1s linear;" }%>    
  </div>

  <%= form.submit class:"btn btn-primary btn-lg btn-block login-button"%>
<% end %>
